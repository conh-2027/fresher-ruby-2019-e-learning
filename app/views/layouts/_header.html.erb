<header class="header">
  <!-- Header Content -->
  <div class="header_container">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="header_content d-flex flex-row
            align-items-center justify-content-start">
            <div class="logo_container">
              <a href=<%= root_path %>>
                <div class="logo_text"><%= t".ht" %>
                  <span><%= t".edu" %></span></div>
              </a>
            </div>
            <nav class="main_nav_contaner ml-auto">
              <ul class="main_nav">
                <div id="menu">
                <li class="link active">
                  <%= link_to t(".home"), root_path %>
                </li>
                <% if logged_in? %>
                  <li class="link"><%= link_to t(".courses"), "courses_path" %></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%= t ".user" %> <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li class="dropdown-item"><%= link_to t(".profile"), current_user %></li>
                      <li class="dropdown-item"><%= link_to t(".lessons"), "lessons_path" %></li>
                      <div class="dropdown-divider"></div>
                      <li class="dropdown-item">
                        <%= link_to t(".logout"), logout_path, method: :delete %>
                      </li>
                    </ul>
                  </li>
                  <div class="search_button"><i class="fa fa-search"
                   aria-hidden="true"></i></div>
                <% else %>
                  <li class="link">
                    <%= link_to t(".login"), login_path %>
                  </li>
                <% end %>
              </div>
              </ul>
              <!-- Hamburger -->
            </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  <!-- Header Search Panel -->
  <div class="header_search_container">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="header_search_content d-flex flex-row align-items-center justify-content-end">
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="Search" placeholder="Search"
                aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
                <%= t ".search" %>
              </button>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
