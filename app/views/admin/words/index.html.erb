<% provide :title, t(".word") %>
<div class="row">
  <div class="col-md-12">
    <%= link_to new_admin_word_path, class: "btn btn-outline-primary mb-3" do %>
      <i class="fa fa-plus"></i>
      <%=  t ".create_word" %>
    <% end %>
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><%= t ".word_list" %></h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered w-100" cellsapcing="0">
            <tr>
              <thead>
                <th><%= t ".stt" %></th>
                <th><%= t ".name" %></th>
                <th><%= t ".meaning" %></th>
                <th><%= t ".course" %></th>
                <th><%= t ".action" %></th>
              </thead>
            </tr>
            <tbody>
              <%= render partial: "word", collection: @words, as: :word  %>
            </tbody>
          </table>
          <%= paginate @words, theme: Settings.theme.paging %>
        </div>
      </div>
    </div>
  </div>
</div>
