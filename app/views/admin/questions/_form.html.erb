<%= form_for [:admin, @question] do |f| %>
  <div class=form-group>
    <%= f.label :question %>
    <%= f.text_field :question, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :word_id %>
    <%= f.select :word_id, options_for_select(load_words,
      selected: @question.word_id), {}, class: "form-control" %>
  </div>
  <hr>
  <div class="form-group">
    <%= f.fields_for :answers do |build| %>
      <%= build.label :content, t(".answer") %>
      <div class="row">
        <div class="col-6">
          <%= build.text_field :content, class: "form-control" %>
        </div>
        <div class="col-6">
          <%= build.check_box :is_correct %>
        </div>
      </div>
    <% end %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
